@model Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="row mt-5">
    <div class="col-md-8 offset-2">
        <div class="card mb-12 border-0" style="background-color:#141414">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-warning ">
                        <p class="card-text">
                            <h3 class="card-title" style="color:black">
                                @Model.Name
                            </h3>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
					<div class="card-body">
						<p class="card-text text-white">@Model.Description</p>


						<p class="card-text text-white"><b class="text-warning">Category: </b>@Model.MovieCategory</p>
						
						<p class="card-text text-white"><b class="text-warning">Producer: </b>@Model.Producer.FullName</p>

