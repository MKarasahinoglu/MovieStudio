@model Movie
@using MovieStudio.Data;

@{ ViewData["Title"] = "Add Movie"; }

<div class="row mt-5" >
	<div class="col-md-8 offset-2 text-center" style="background-color:#141414">
		<p>
			<h3 class="text-warning">Add Movie</h3>
		</p>

		<div class="row" style="background-color:#101010">
			<div class="col-md-8 offset-2 text-left" >
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="row mt-2" >
						<div class="col-md-6">
							<div class="form-group">
								<label asp-for="Name" class="control-label text-white"></label>
								<input asp-for="Name" class="form-control" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>



							<div class="form-group">
								<label asp-for="ImageURL" class="control-label text-white"></label>
								<input asp-for="ImageURL" class="form-control" />
								<span asp-validation-for="ImageURL" class="text-danger"></span>
							</div>
						</div>
						<div class="col-md-6">

							<div class="form-group">
								<label asp-for="MovieCategory" class="control-label text-white"></label>
								<select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
								<span asp-validation-for="MovieCategory" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="ProducerId" class="control-label text-white">Producer</label>
								<select asp-for="ProducerId" class="form-control" asp-items="ViewBag.ProducerSelectList"></select>
							</div>

						</div>
						
						
						<div class="col-md-12">
							<div class="form-group">
								<label asp-for="Description" class="control-label text-white"></label>
								<textarea asp-for="Description" class="form-control"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
						</div>
					</div>

					<div class="col-md-4 offset-4 text-center">
						<img width="100%" id="ImageUrlPreview" />
					</div>

					<div class="form-group">
						<input type="submit" value="Create" class="btn btn-warning float-right" />
						<a class="btn btn-outline-warning" asp-action="Index">Show all</a>
					</div>

				</form>

			</div>
		</div>

	</div>
</div>

@section Scripts{
	<script>
		$("#ImageURL").on("change", function () {
			var output = document.getElementById("ImageUrlPreview");
			output.src = $(this).val();
		})
	</script>
}