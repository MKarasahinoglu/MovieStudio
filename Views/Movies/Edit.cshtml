@model Movie
@using MovieStudio.Data;
 
@{
    ViewData["Title"] = "Edit Movie";
}

<div class="row mt-5 text-center">
    <div class="col-md-8 offset-2" style="background-color:#141414">
        <p>
            <h3 class="text-warning">Edit Movie</h3>
        </p>

        <div class="row text-left" style="background-color:#101010">
            <div class="col-md-8 offset-2 mt-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label text-white"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            
                            
                            
                            <div class="form-group">
                                <label asp-for="ImageURL" class="control-label text-white"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            
                            <div class="form-group">
                                <label asp-for="MovieCategory" class="control-label text-white"></label>
                                <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
							<div class="form-group">
								<label asp-for="ProducerId" class="control-label text-white"></label>
								<select asp-for="ProducerId" class="form-control" asp-items="ViewBag.ProducerSelectList"></select>
							</div>
                            
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label text-white"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-warning float-right" />
                        <a class="btn btn-outline-warning" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });

        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}