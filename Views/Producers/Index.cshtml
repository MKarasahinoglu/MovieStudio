@model IEnumerable<Producer>

@{
	ViewData["Title"] = "List of Producers";
}
<div class="text-center mb-2">
	<a asp-controller="Producers" asp-action="Create" class="btn btn-warning" style="color: black"><i class="bi bi-plus-square-fill"></i> Add New</a>
</div>
<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table table-borderless" style="background-color: #141414; border-radius: 10px; border-color: white;">
			<thead>
				<tr class="text-center" style="background-color: #ffc107">
					<th style="color:black">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
					<th style="color:black">@Html.DisplayNameFor(model => model.FullName)</th>
					<th style="color:black">@Html.DisplayNameFor(model => model.Bio)</th>
					<th style="color:black">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr class="text-center">
						<td class="align-middle"><img class="rounded-circle" src="@item.ProfilePictureURL" style="max-width:150px" /></td>
						<td class="align-middle text-white">
							@Html.DisplayFor(modeItem => item.FullName)
						</td>
						<td class="align-middle text-white">
							@Html.DisplayFor(modeItem => item.Bio)
						</td>
						<td class="align-middle">

							<a class="btn btn-warning" style="color:black" asp-controller="Producers" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
							<a class="btn btn-warning" style="color:black" asp-controller="Producers" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-three-dots-vertical"></i>Details</a>
							<a class="btn btn-warning" style="color:black" asp-controller="Producers" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
						</td>
					</tr>

				}
			</tbody>
		</table>

	</div>
</div>


