@model IEnumerable<Actor>

@{ 
	ViewData["Title"] = "List of Actors";
}
<div class="text-center mb-2">
	<a asp-controller="Actors" asp-action="Create" class="btn btn-outline-info text-white"><i class="bi bi-plus-square-fill"></i> Add New</a>
</div>
<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table" style="background-color:#42474e;border-radius:10px;border-color:white">
			<thead>
				<tr class="text-center" style="background-color: #ededed">
					<th class="text-info">@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
					<th class="text-info">@Html.DisplayNameFor(model => model.FullName)</th>
					<th class="text-info">@Html.DisplayNameFor(model => model.Bio)</th>
					<th class="text-info">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr class="text-center">
					<td class="align-middle"><img class="rounded-circle" src="@item.ProfilePictureURL" style="max-width:150px"/></td>
					<td class="align-middle text-white">
						@Html.DisplayFor(modeItem=>item.FullName)
					</td>
					<td class="align-middle text-white">
						@Html.DisplayFor(modeItem => item.Bio)
					</td>
					<td class="align-middle">
						
						<a class="btn btn-outline-info text-white" asp-controller="Actors" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
						<a class="btn btn-outline-info text-white" asp-controller="Actors" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-three-dots-vertical"></i>Details</a>
						<a class="btn btn-outline-info text-white" asp-controller="Actors" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
					</td>
				</tr>

				}
			</tbody>
		</table>

	</div>
</div>

